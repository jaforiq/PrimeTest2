@model PrimeTest2.Models.Product

<h1>Product Details</h1>

<form method="post">
    <div class="mt-3">
        <label class="form-label">ID</label>
        <input type="text" class="form-control" asp-for="Id" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" asp-for="Name" />
    </div>

    <div class="mt-3">
        <label class="form-label">Product Code</label>
        <input type="text" class="form-control" asp-for="ProductCode" readonly />
    </div>

    <div class="mt-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" asp-for="Description" />
    </div>

    <div class="mt-3">
        <label class="form-label">Price</label>
        <input type="text" class="form-control" asp-for="Prize" />
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary" asp-controller="ShoppingItem" asp-action="AddToCart" asp-route-Id="Id">Buy It</button>
    </div>

</form>